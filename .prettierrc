{
  "semi": true,
  "tabWidth": 2,
  "trailingComma": "es5",
  "singleQuote": true,
  "jsxSingleQuote": true,
  "importOrder": ["^@/(.*)$", "^[./]"],
  "importOrderSeparation": true,
  "importOrderSortSpecifiers": true,
  "plugins": [
    "@trivago/prettier-plugin-sort-imports",
    "prettier-plugin-tailwindcss"
  ],
  "tailwindAttributes": ["theme"],
  "tailwindFunctions": [
    "twMerge",
    "twc",
    "twx",
    "clsx",
    "cn",
    "createTheme"
  ]
}
